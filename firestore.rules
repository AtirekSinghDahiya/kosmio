rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // PROFILES COLLECTION
    // ============================================
    // Users can manage their own profile data
    match /profiles/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent profile deletion
    }

    // ============================================
    // PROJECTS COLLECTION
    // ============================================
    // Users can manage their own projects
    match /projects/{projectId} {
      // Read: User must own the project
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Create: User must set themselves as owner
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Update: User must own the project
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Delete: User must own the project
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // ============================================
    // MESSAGES COLLECTION
    // ============================================
    // Simplified: Users can manage messages they create
    // Messages are linked to projects via projectId field
    match /messages/{messageId} {
      // Read: Allow authenticated users to read messages
      // (We trust the app to only query for messages in their projects)
      allow read: if isAuthenticated();

      // Create: Allow authenticated users to create messages
      // (We trust the app to only create messages in their projects)
      allow create: if isAuthenticated() &&
                       request.resource.data.projectId != null &&
                       request.resource.data.role != null &&
                       request.resource.data.content != null;

      // Update: Allow authenticated users to update messages
      allow update: if isAuthenticated();

      // Delete: Allow authenticated users to delete messages
      allow delete: if isAuthenticated();
    }
  }
}
